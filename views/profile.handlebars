<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Add New Pet:</h3>

    <form class="form new-pet-form">

      <div class="form-group">
        <label for="name">pet name:</label>
        <input class="form-input" type="text" id="name" name="name" />
      </div>

      <div class="form-group">
          <label for="animal_type">pet type:</label>
        
          <input type="radio" id="dog" name="animal_type" value="dog">
          <label for="dog">dog</label><br>

          <input type="radio" id="cat" name="animal_type" value="cat">
          <label for="cat">cat</label><br>

          <input type="radio" id="other" name="animal_type" value="other">
          <label for="other">other</label>
      </div>

      <div class="form-group">
        <label for="breed">breed</label>
        <input class="form-input" type="text" id="breed" name="breed"></input>
      </div>

      <div class="form-group">
        <label for="description">description:</label>
        <textarea class="form-input" id="description" name="description"></textarea>
      </div>

      <div class="form-group">
        <label for="age">age:</label>
        <input class="form-input" type="number" id="age" name="age" placeholder="provide age in years"></input>
      </div>

      <div class="form-group">
        <label for="gender">gender:</label>

        <input type="radio" id="female" name="gender" value="female">
        <label for="female">female</label><br>

        <input type="radio" id="male" name="gender" value="male">
        <label for="male">male</label><br>  
      </div>

      <div class="form-group">
        <label for="size">size:</label>

        <input type="radio" id="x-small" name="size" value="x-small">
        <label for="x-small">x-small less than 15 lbs</label><br>

        <input type="radio" id="small" name="size" value="small">
        <label for="small">small 15-30 lbs</label><br>  

        <input type="radio" id="medium" name="size" value="medium">
        <label for="medium">medium 30-45 lbs</label><br>

        <input type="radio" id="large" name="size" value="large">
        <label for="large">large 45-60 lbs</label><br>

        <input type="radio" id="x-large" name="size" value="x-large">
        <label for="x-large">x-large greater than 60 lbs</label><br>  
      </div>

      <div class="form-group">
        <label for="good_with_kids">good with kids?</label>

        <input type="radio" id="yes" name="good_with_kids" value="yes">
        <label for="yes">yes</label><br>

        <input type="radio" id="no" name="good_with_kids" value="no">
        <label for="no">no</label><br>
      </div>

      <div class="form-group">
        <label for="good_with_cats">good with cats?</label>

